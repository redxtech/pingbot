[Unit]
Description=Podman Compose container-pingbot.service
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Type=oneshot
RemainAfterExit=true
TimeoutStopSec=70
ExecStart=/usr/bin/podman-compose -f /home/gabe/Pods/pingbot/docker-compose.yml up --build -d
ExecStop=/usr/bin/podman-compose -f /home/gabe/Pods/pingbot/docker-compose.yml down

[Install]
WantedBy=default.target
